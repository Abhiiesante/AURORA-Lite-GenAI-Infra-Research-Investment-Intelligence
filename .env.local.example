# Phase 2 local env template
# Database (Neon/Supabase or local Postgres)
DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/aurora

# Search & Vector backends (optional; scaffold uses in-repo retrieval if unset)
QDRANT_URL=http://localhost:6333
MEILI_URL=http://localhost:7700
MEILI_MASTER_KEY=

# Graph DB (optional)
NEO4J_URL=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j

# LLM (Ollama)
OLLAMA_BASE_URL=http://localhost:11434
RERANK_ENABLED=true

# Auth (optional; if set, POST /insights requires Bearer JWT)
SUPABASE_JWT_SECRET=

# Local override for running outside Docker Desktop
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/aurora
QDRANT_URL=http://localhost:6333
MEILI_URL=http://localhost:7700
MEILI_MASTER_KEY=
NEO4J_URL=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j
OLLAMA_BASE_URL=http://localhost:11434
RERANK_ENABLED=true
ALLOWED_ORIGINS=*
DEV_ADMIN_TOKEN=

# Optional Supabase auth for POST /insights
# Set to your Supabase JWT secret (Settings -> API -> JWT Secret)
SUPABASE_JWT_SECRET=

# --- Phase 3 local knobs (optional) ---
# General perf gate p95 budget (ms)
PERF_P95_BUDGET_MS=1500
# Market Map perf gate p95 budget (ms)
MARKET_P95_BUDGET_MS=2000
# Sliding window size for /dev/metrics
METRICS_WINDOW_SAMPLES=50
# Error-rate ceiling
ERROR_RATE_MAX=0.02
# RAG gates
ALLOWED_RAG_DOMAINS=example.com
RAG_MIN_SOURCES=1
# Forecast thresholds: default and per-metric override example
SMAPE_MAX=80
SMAPE_MAX_mentions=65
# Promote market gate into main CI locally if desired
CI_MARKET_GATE=0
