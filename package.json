{
  "name": "aurora-lite",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@9.7.0",
  "scripts": {
    "dev": "pnpm --filter aurora-web dev",
    "build": "pnpm -r build",
    "build:static": "cd apps/web && STATIC_EXPORT=1 node scripts/prepare-static-export.js && STATIC_EXPORT=1 pnpm build && STATIC_EXPORT=1 pnpm exec next export",
    "lint": "pnpm -r lint"
  },
  "devDependencies": {
    "@react-three/drei": "9.103.0",
    "@react-three/fiber": "8.15.18",
    "@types/three": "^0.180.0",
    "classnames": "2.5.1",
    "three": "0.161.0"
  }
}
